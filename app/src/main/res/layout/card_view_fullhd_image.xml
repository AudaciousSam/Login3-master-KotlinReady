<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_border">

    <ImageView
        android:id="@+id/imageViewCardFullHD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/imageFriends"
        android:foreground="@drawable/translucent_square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_upload_image" />

    <ImageView
        android:id="@+id/imageViewCardProfileThumb"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/card_border"
        android:contentDescription="@string/imageFriends"
        android:foreground="@drawable/translucent_square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_upload_image" />

    <TextView
        android:id="@+id/textViewFullHD"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:shadowColor="@color/TextColorBlack"
        android:shadowRadius="4"
        android:text="@string/omg_so_pretty"
        android:textColor="@color/TextColorWhite"
        android:textColorHint="@color/TextColorWhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewCardProfileThumb"
        app:layout_constraintTop_toTopOf="@+id/imageViewCardProfileThumb" />



</androidx.constraintlayout.widget.ConstraintLayout>